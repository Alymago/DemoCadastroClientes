<!DOCTYPE html>
<html>
<head>
    <title>Página dos clientes</title>
</head>
<body>
    <div class="panel panel-primary">
        <div class="panel-heading" style="font-size:larger">Clientes</div>
        <div class="panel-body">
            <div class="input-group col-md-6">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
                @Html.TextBox("texto", ViewBag.CurrentFilter as string, new { @id = "tags", @class = "form-control", @placeholder = "Digite a consulta" })
                <span class="input-group-btn">
                    <button class="btn btn-danger" type="reset">
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                </span>

            </div>
            <div>
                @Html.ActionLink("Cadastrar", "Cadastrar", null, new { data_modal = "", id = "btnCadastrar", @class = "btn btn-success pull-right" })
            </div>

        </div>
    </div>
    <div class="panel panel-primary" style="margin-top:50px">
        <div class="panel-heading">Lista de Clientes</div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Endereço</th>
                    <th>Telefone</th>
                    <th>Observação</th>
                    <th>Editar</th>
                    <th>Excluir</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var clientes in Model)
                {
                    <tr>
                        <td>
                            @clientes.Quantidade
                        </td>
                        <td>
                            @clientes.Nome
                        </td>
                        <td>
                            @clientes.Diretor
                        </td>
                        <td>
                            @clientes.Genero
                        </td>
                        <td>
                            @if (clientes.Censurado)
                            {
                                <span>Filme Censurado</span>
                            }
                            else
                            {
                                <span>Filme não censurado</span>
                            }
                        </td>
                        <td>
                            <form action="~/Clientes/Editar">
                                <input type="hidden" name="FilmeId" value="@clientes.ClienteId" />
                                <button type="submit" class="btn btn-warning">
                                    <span class="glyphicon glyphicon-pencil"></span>&nbsp;
                                </button>
                            </form>
                        </td>
                        <td>
                            <form action="~/Filmes/Deletar">
                                <input type="hidden" name="FilmeId" value="@clientes.ClienteId" />
                                <button type="submit" class="btn btn-danger">
                                    <span class="glyphicon glyphicon-trash"></span>&nbsp;
                                </button>
                            </form>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html>

